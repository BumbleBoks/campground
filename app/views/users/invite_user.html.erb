<%= provide(:title, "Join OnTrailAgain") %>
<h2>Get An Invite</h2>

<div class='project_form'>
	<%=  form_tag site_user_requests_path do -%>
		<%= hidden_field_tag "user_request", "get_invite" %>
		
		<div>
			<%= label_tag :invite_email, "Email" %>
			<%= email_field_tag :invite_email, "", autofocus: true %>
		</div>
		
		<%= submit_tag "Send me an invite" %>

	<% end -%>	
</div>
